<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>{{ title or metadata.title }}</title>
	<meta name="description" content="{{ description or metadata.description }}">

	{% include "source/_includes/components/head-meta-tags.njk" %}

	{% include "source/_includes/components/head-css-tags.njk" %}
</head>
<body>

<div class="container-fluid">
	<header class="row align-items-center py-3 pl-3">
		<div class="col-auto px-0 d-lg-none d-block">
			<button class="btn" data-toggle="modal" data-target="#nav-modal">{% icon "list" %}</button>
		</div>

		<h1 class="col-auto position-relative">
			<img src="/images/logo-rough.png" alt="JAG logo" class="img-fluid">
			<a href="/" class="text-decoration-none stretched-link fw-bolder">JAG</a>
		</h1>
	</header><!-- end container -->


	<main class="row">
		<div class="sidebar col pl-0 d-lg-block d-none">
			{% include "source/_includes/components/head-nav.njk" %}
		</div><!-- end sidebar nav -->

		<div class="col p-0">
			<div class="p-3">
				{{ content | safe }}
			</div>
		</div>
	</main><!-- end row -->


	<footer></footer>
</div><!-- end container -->



<div class="modal fade" id="nav-modal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content border-0">
			<div class="sidebar">
				{% include "source/_includes/components/head-nav.njk" %}
			</div>
		</div><!-- content -->
	</div><!-- end dialog -->
</div><!-- end modal -->





{% include "source/_includes/components/footer-js-tags.njk" %}

</body>
</html>
