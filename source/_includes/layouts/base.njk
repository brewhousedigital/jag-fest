<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>{{ title or metadata.title }}</title>
	<meta name="description" content="{{ description or metadata.description }}">

	{% include "source/_includes/components/head-meta-tags.njk" %}

	{% include "source/_includes/components/head-css-tags.njk" %}
</head>
<body>

<div class="container-fluid">
	<header class="row justify-content-between py-3 pl-3">
		<h1 class="col-auto position-relative">
			<img src="/images/logo-rough.png" alt="JAG logo" class="img-fluid">
			<a href="/" class="text-decoration-none stretched-link fw-bolder">JAG</a>
		</h1>

		<div class="col-auto">

		</div>
	</header><!-- end container -->



	<main class="row">
		<div class="sidebar col pl-0">
			<nav class="">
				{% for link in nav %}
				<a href="{{ link.href }}"
				   class="d-flex align-items-center py-3 {% if link.active == navActive %}active{% endif %}">
					{% icon link.icon %}
					<span class="d-inline-block ml-3">{{ link.name }}</span>
				</a>
				{% endfor %}
			</nav>
		</div><!-- end sidebar nav -->

		<div class="col p-0">
			<div class="p-3">
			{{ content | safe }}
			</div>
		</div>
	</main><!-- end row -->


	<footer></footer>
</div><!-- end container -->


{% include "source/_includes/components/footer-js-tags.njk" %}

</body>
</html>
