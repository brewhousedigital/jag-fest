<div class="row">
	{% for post in postslist | reverse %}
		<div class="col-lg-4">
			<div class="card card-body text-white bg-dark mb-5 shadow">
				<a href="{{ post.url | url }}" class="text-white h3 stretched-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>

				<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>

				{% for tag in post.data.tags %}
					{%- if collections.tagList.indexOf(tag) != -1 -%}
						{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						{#<a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>#}
					{%- endif -%}
				{% endfor %}
			</div><!-- end card -->
		</div><!-- end col -->
	{% endfor %}
</div><!-- end row -->
