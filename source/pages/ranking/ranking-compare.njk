<h1 class="display-1 mb-5">Ranking - Compare</h1>


<form id="compare-rankings" class="row">
	<div class="col-6">
		<label for="ranking-choice-1">Choose a person</label>
		<select id="ranking-choice-1" name="ranking-choice-1" class="form-control">
			<option selected disabled>Choose</option>
			{% for person in ranking %}
				<option value="{{ person.id }}">{{ person.name }}</option>
			{% endfor %}
		</select>
	</div><!-- end col -->

	<div class="col-6">
		<label for="ranking-choice-2">Choose a person</label>
		<select id="ranking-choice-2" name="ranking-choice-2" class="form-control">
			<option selected disabled>Choose</option>
			{% for person in ranking %}
				<option value="{{ person.id }}">{{ person.name }}</option>
			{% endfor %}
		</select>
	</div><!-- end col -->
</form><!-- end row -->


<div class="row ranking-container">
	<div id="ranking-compare-1" class="col-lg-6 col-12 text-center">
		<div class="ranking-badge ranking-{{ person.color }}">
			<div class="circle"
				 style="background-image: url('/images/avatars/{{ person.avatar }}')"></div>
			<div class="ribbon">{{ person.name }}</div>
		</div><!-- end rank badge -->

		<ul class="list-group">
			{#{% for game in person.games %}
				<li class="list-group-item d-flex justify-content-between align-items-center bg-dark">
					<div>{{ game.name }}</div>
					<div>
						<span class="badge bg-success rounded-pill">{{ game.wins }}</span>
						<span class="badge bg-danger rounded-pill">{{ game.loses }}</span>
					</div>
				</li>
			{% endfor %}#}
		</ul>
	</div><!-- end col -->

	<div id="ranking-compare-2" class="col-lg-6 col-12 text-center">
		<div class="ranking-badge ranking-{{ person.color }}">
			<div class="circle"
				 style="background-image: url('/images/avatars/{{ person.avatar }}')"></div>
			<div class="ribbon">{{ person.name }}</div>
		</div><!-- end rank badge -->

		<ul class="list-group">
			{#{% for game in person.games %}
				<li class="list-group-item d-flex justify-content-between align-items-center bg-dark">
					<div>{{ game.name }}</div>
					<div>
						<span class="badge bg-success rounded-pill">{{ game.wins }}</span>
						<span class="badge bg-danger rounded-pill">{{ game.loses }}</span>
					</div>
				</li>
			{% endfor %}#}
		</ul>
	</div><!-- end col -->
</div><!-- end ranking wrapper -->

