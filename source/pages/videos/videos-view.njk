---
layout: layouts/base.njk
title: "Videos"
permalink: /videos/
navActive: "videos"
---

<div class="container">
<h1 class="display-1 mb-5">Videos</h1>

{% set postslist = collections.posts %}
{% set postslistCounter = collections.posts | length %}

<div class="row">
	{% for post in postslist | reverse %}
		{% if post.data.category === "videos" %}
		<div class="col-lg-4">
			<div class="card card-body text-white bg-dark mb-5 shadow">
				{% set videoTitle = post.data.videoTitle %}
				{% include 'source/pages/videos/component-show-logo.njk' %}
				<h3 class="" style="font-size: 40px">Episode {{ post.data.episode }}</h3>
				<h4 class="mb-4" style="font-size: 30px">{{ post.data.title }}</h4>
				<div class="row">
					<p class="col-md"><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></p>
					<p class="col-md text-end"><a href="{{ post.url }}" class="text-white stretched-link">Check it Out</a></p>
				</div><!-- end row -->
			</div><!-- end card -->
		</div><!-- end col -->
		{% endif %}
	{% endfor %}
</div><!-- end row -->
</div><!-- end container -->
